<!--管理者ログイン-->
<div class="container my-3">
  <h2 class="font-weight-bold">＜管理者ログイン＞</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group field">
      <%= f.label :"メールアドレス", class: "control-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-2" %>
    </div>
  
    <div class="form-group field">
      <%= f.label :"パスワード", class: "control-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-sm-2" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="form-group field">
        <%= f.check_box :remember_me %>
        <%= f.label :"保存する" %>
      </div>
    <% end %>
  
    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
</div>

<%= render "admin/shared/links" %>
