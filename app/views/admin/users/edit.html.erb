<!--バリデーションエラー-->
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました。
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--ユーザー編集-->
<div class="container my-3">
  <div class="UserForm">
    <h2 class="font-weight-bold"><i class="fas fa-user-edit"></i> ユーザー編集</h2>
    <div class="row d-block">
      <div class="col-6">
        <%= form_with model: [:admin, @user] do |f| %>
          <div class="form-group">
            <%= f.label :"プロフィール画像" %><br>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :"氏名" %>
            <%= f.text_field :name, placeholder: "佐藤太郎", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :"電話番号" %>
            <%= f.text_field :telephone_number, placeholder: "00000000000", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :"メールアドレス" %>
            <%= f.text_field :email, placeholder: "test@example.com", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :"ユーザー名" %>
            <%= f.text_field :display_name, placeholder: "テスト太郎", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :"都道府県" %>
            <%= f.text_field :prefecture, placeholder: "東京都", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :"市区町村" %>
            <%= f.text_field :municipality, placeholder: "新宿区", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :"自己紹介" %>
            <%= f.text_area :self_introduction, placeholder: "宜しくお願いします", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted_false, "有効" %><br>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted_true, "退会" %>
          </div>
          <%= f.submit "変更を保存する", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>