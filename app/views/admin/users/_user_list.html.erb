<% if users.present? %>
  <table class="table table-bordered text-center">
    <tr class="table table-secondary">
      <th scope="col"></th>
      <th scope="col">ID</th>
      <th scope="col">ステータス</th>
      <th scope="col">ユーザー名</th>
      <th scope="col">都道府県</th>
      <th scope="col">市区町村</th>
      <th scope="col"></th>
    </tr>
    <% users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100, 100), class: "UserIndexImg" %></td>
      <td><%= user.id %></td>
      <td><%= user.is_deleted ? "退会" : "有効" %></td>
      <td><%= user.display_name %></td>
      <td><%= user.prefecture %></td>
      <td><%= user.municipality %></td>
      <td><%= link_to "詳細", admin_user_path(user.id) %></td>
    </tr>
    <% end %>
  </table>
<% else %>
  <p class="text-center my-5">ユーザーが見つかりませんでした</p>
<% end %>