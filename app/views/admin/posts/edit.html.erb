<!--バリデーションエラー-->
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました。
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--投稿編集-->
<div class="container my-3">
  <h2 class="font-weight-bold">＜投稿編集画面＞</h2>
  <%= form_with model: [:admin, @post] do |f| %>
    <div class="form-group field">
      <%= f.label :"イメージ画像" %><br>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="form-group field">
      <%= f.label :"タグ", class: "control-label" %><br>
      <%= f.text_field :tag, value: @post.tags.pluck(:name).join(','), class: "form-control col-sm-6" %>
    </div>
    <div class="form-group field">
      <%= f.label :"タイトル", class: "control-label" %>
      <%= f.text_field :title, class: "form-control col-sm-6" %>
    </div>
    <div class="form-group field">
      <%= f.label :"日時", class: "control-label" %>
      <%= f.text_field :time, class: "form-control col-sm-6" %>
    </div>
    <div class="form-group field">
      <%= f.label :"場所", class: "control-label" %>
      <%= f.text_field :place, class: "form-control col-sm-6" %>
    </div>
    <div class="form-group field">
      <%= f.label :"持ち物", class: "control-label" %>
      <%= f.text_field :belonging, class: "form-control col-sm-6" %>
    </div>
    <div class="form-group field">
      <%= f.label :"詳細情報", class: "control-label" %>
      <%= f.text_area :body, class: "form-control col-sm-6" %>
    </div>
    <div class="form-group field">
      <%= f.label :"公開" %>
      <%= f.radio_button :status, :public %><br>
      <%= f.label :"非公開（下書き）" %>
      <%= f.radio_button :status, :private %>
    </div>
    <%= f.submit "変更を保存する", class: "btn btn-success" %>
  <% end %>
</div>