<!--バリデーションエラー-->
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました。
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--投稿編集-->
<div class="container my-3">
  <h2 class="font-weight-bold">＜投稿編集画面＞</h2>
  <%= form_with model: [:admin, @post] do |f| %>
    <div class="form-group field">
      <%= f.label :"イメージ画像", class: "control-label" %>
      <%= f.file_field :image, accept: "image/*", class: "form-control" %>
    </div>
    <div class="form-group field">
      <%= f.label :"タグ", class: "control-label" %>
      <%= f.collection_select :tag_ids, Tag.all, :id, :name, class: "form-control" %>
    </div>
    <div class="form-group field">
      <%= f.label :"タイトル", class: "control-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group field">
      <%= f.label :"日時", class: "control-label" %>
      <%= f.text_field :time, class: "form-control" %>
    </div>
    <div class="form-group field">
      <%= f.label :"場所", class: "control-label" %>
      <%= f.text_field :place, class: "form-control" %>
    </div>
    <div class="form-group field">
      <%= f.label :"持ち物", class: "control-label" %>
      <%= f.text_field :belonging, class: "form-control" %>
    </div>
    <div class="form-group field">
      <%= f.label :"詳細情報", class: "control-label" %>
      <%= f.text_field :body, class: "form-control" %>
    </div>
    <%= f.submit "変更を保存する", class: "btn btn-success" %>
  <% end %>
</div>