<!--コメント一覧-->
<p>【コメント一覧】</p>
<% post.comments.each do |comment| %>
  <table class="CommentList w-100">
    <td style="width: 8%">
      <%= image_tag comment.user.get_profile_image(50, 50), class: "rounded-circle" %>
    </td>
    <td style="width: 12%">
      <%= comment.user.display_name %>
    </td>
    <td style="width: 55%">
      <%= simple_format(h(comment.content), class: "my-0") %>
    </td>
    <td style="width: 15%">
      <h6 style="color: #C0C0C0;"><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></h6>
    </td>
    <td class="text-center" style="width: 10%">
      <%= link_to "削除", admin_post_comment_path(comment.post, comment), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
    </td>
  </table>
<% end %>
<% unless post.comments.present? %>
  <p>&emsp;コメントは特にありません</p>
<% end %>