<div class="container-fluid w-75 my-3">
  <div class="row">
    <div class="col">
      <h2 class="font-weight-bold">＜非公開（下書き）一覧＞</h2>
      <% if @posts.present? %>
      <table class="table table-bordered text-center" style="table-layout: fixed;">
        <tr class="table table-secondary">
          <th scope="col"></th>
          <th scope="col">タイトル</th>
          <th scope="col">タグ</th>
          <th scope="col">日時</th>
          <th scope="col">場所</th>
          <th scope="col" width="8%">いいね</th>
          <th scope="col" width="10%">コメント</th>
          <th scope="col" width="8%"></th>
        </tr>
        <% @posts.each do |post| %>
        <tr>
          <td><%= image_tag post.get_image(100, 100) %></td>
          <td><%= post.title %></td>
          <td>
            <% post.tags.each do |tag| %>
              <p><%= tag.name %></p>
            <% end %>
          </td>
          <td><%= post.time %></td>
          <td><%= post.place %></td>
          <td>♥<%= post.favorites.count %></td>
          <td><%= post.comments.count %>件</td>
          <td><%= link_to "詳細", post_path(post.id) %></td>
        </tr>
        <% end %>
      </table>
      <% else %>
        <p class="text-center my-5">非公開（下書き）の投稿はありません</p>
      <% end %>
    </div>
  </div>
</div>