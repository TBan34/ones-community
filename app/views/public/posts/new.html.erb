<div class="container">
  <div class="row">
        <%= form_with model: @post do |f| %>
    <div class="col-4">
      <div class="form-group field">
        <%= f.label :"イメージ画像", class: "control-label" %>
        <%= f.file_field :image, accept: "image/*", class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :"タグ", class: "control-label" %>
        <%= f.collection_select :tag_ids, Tag.all, :id, :name, class: "form-control" %>
      </div>
    </div>
    <div class="col-8">
      <div class="form-group field">
        <%= f.label :"投稿タイトル", class: "control-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :"投稿詳細", class: "control-label" %>
        <%= f.text_field :body, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :"日時", class: "control-label" %>
        <%= f.text_field :time, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :"場所", class: "control-label" %>
        <%= f.text_field :place, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :"持ち物", class: "control-label" %>
        <%= f.text_field :belonging, class: "form-control" %>
      </div>
      <%= f.submit "投稿する", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>