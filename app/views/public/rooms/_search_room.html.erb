<!--ルーム検索欄-->
<% if user_signed_in? %>
  <div class="SearchRoomForm mr-3">
    <%= form_with url: search_room_path, local: true, method: :get do |f| %>
      <%= f.text_field :search_room, placeholder: "キーワードを入力" %>
      <%= f.select :range, options_for_select([["ユーザー"], ["タイトル"]]) %>
      <%= f.submit "検索", class: "btn btn-secondary btn-sm" %>
    <% end %>
  </div>
<% end %>