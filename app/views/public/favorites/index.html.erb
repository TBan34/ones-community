<div class="container-fluid mt-3">
  <h2 class="font-weight-bold">＜いいねした投稿＞</h2>
  
  <% if @favorite_posts.present? %>
  <table class="table table-bordered text-center">
    <tr class="table table-secondary">
      <th scope="col"></th>
      <th scope="col">投稿者</th>
      <th scope="col">タイトル</th>
      <th scope="col">タグ</th>
      <th scope="col">日時</th>
      <th scope="col">場所</th>
      <th scope="col">いいね</th>
      <th scope="col">コメント</th>
      <th scope="col"></th>
    </tr>
    <% @favorite_posts.each do |post| %>
    <tr>
      <td><%= image_tag post.get_image(100, 100) %></td>
      <td><%= post.user.display_name %></td>
      <td><%= post.title %></td>
      <td>
        <% post.tags.each do |tag| %>
          <p><%= tag.name %></p>
        <% end %>
      </td>
      <td><%= post.time %></td>
      <td><%= post.place %></td>
      <td>♥<%= post.favorites.count %></td>
      <td><%= post.comments.count %>件</td>
      <td><%= link_to "詳細", post_path(post.id) %></td>
    </tr>
    <% end %>
  </table>
  <% else %>
    <p class="text-center my-5">いいねした投稿はありません</p>
  <% end %>
  <div class="pagination justify-content-center">
    <%= paginate @favorite_posts %>
  </div>
</div>