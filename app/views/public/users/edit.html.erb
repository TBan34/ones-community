<div class="container">
  <div class="row">
     <%= form_with model: @user do |f| %>
    <div class="col-6">
      <div class="form-group field">
        <%= f.label :"プロフィール画像", class: "control-label" %>
        <%= f.file_field :profile_image, accept: "image/*", class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :"氏名", class: "control-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :"電話番号", class: "control-label" %>
        <%= f.text_field :telephone_number, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :"メールアドレス", class: "control-label" %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="col-6">
      <div class="form-group field">
        <%= f.label :"表示名", class: "control-label" %>
        <%= f.text_field :display_name, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :"居住地（都道府県）", class: "control-label" %>
        <%= f.text_field :prefecture, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :"居住地（市区町村）", class: "control-label" %>
        <%= f.text_field :municipality, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :"自己紹介", class: "control-label" %>
        <%= f.text_field :self_introduction, class: "form-control" %>
      </div>
      <%= f.submit "保存", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col">
      <p><%= link_to user_unsubscribe_path(current_user) do %>退会を希望する<% end %></p>
    </div>
  </div>
</div>